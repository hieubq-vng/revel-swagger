# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_size = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[{*.json,*.html,*.css}]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
